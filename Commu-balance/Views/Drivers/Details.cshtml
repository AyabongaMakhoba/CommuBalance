@model Commu_balance.Models.Driver

@{
    ViewBag.Title = "Details";
}

<h2>Driver Profile</h2>

<div>

    <hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Driver_IDNo)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_IDNo)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Driver_Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_Name)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Driver_Surname)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_Surname)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Driver_CellNo)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_CellNo)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Driver_Address)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_Address)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Driver_Email)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Driver_Email)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Diver_Image)
		</dt>

		<dd>
		
			@if (Model.Diver_Image != null)
			{
				var base64 = Convert.ToBase64String(Model.Diver_Image);
				var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
				<img src="@ImgSource" width="250" height="250" />
			}   
		</dd>

	</dl>
</div>
<p>
    @Html.ActionLink("Update My details", "Edit", new { id = Model.Driver_ID }) 
</p>
