@model Commu_balance.Models.Request

@{
	ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h2>Accept Requests </h2>
	<hr />
	<br />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Request_ID)
	@Html.HiddenFor(model => model.Request_Date)
	@Html.HiddenFor(model => model.Profile_ID)



	<div class="form-group">
		@Html.LabelFor(model => model.RequestStatus_ID, "Request Status", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DropDownList("RequestStatus_ID", null, htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.RequestStatus_ID, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Accept Request" class="btn btn-primary" />
		</div>

	</div>
	<div class="row">
		<a href='@Url.Action("Details", "Schedules", new { id = Model.Request_ID }, null)' class="btn btn-secondary">View on Map</a>
	</div>
</div>
}

